<div id="background"></div>

      <div id="wrapper">
        <div id="new_country_box">
        <%= link_to '', new_country_path, id: "new_country" %> 
          <%= link_to 'New Country', new_country_path, id: "new_country_text" %>

          </div></div>

<div id="country_container">

  <div id="countries">Countries</div>
    

          
        </div>



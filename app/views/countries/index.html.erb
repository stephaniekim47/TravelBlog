<%= javascript_include_tag "index" %>
<%= stylesheet_link_tag "index", :media => "all" %>

<link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,700,600' rel='stylesheet' type='text/css'>

<% if current_user %>
  <div id="new_button">
    <%= link_to '', new_country_path, id: "new_button_background" %> 
    <%= link_to '+', new_country_path, id: "new_button_text" %>
  </div>
<% end %>


<div id="title">Countries</div>

<div id="cont">
  <% @countries.each do |country| %>
      <div id="each">
      <div id="countryname">
        <%= link_to country.title, country_path(country), id: "title_text" %></div>
      <div id="overlaywrapper">
        <%= link_to " ", country_path(country), id: "pic_overlay" %>
      </div>
      <div id="pic_container">
      <div id="pic_cropper">
      <div id="pic">
      <%= link_to( image_tag(country.photo.url(:medium)), country_path(country) ) %></div></div></div>
      <div id="ed">
      <% if current_user == country.user or current_user.try(:admin?) == true %>
        <div id="editer">

        <%= link_to(  image_tag('edit.png'), edit_country_path(country), id: "icon") %></div>
      
      <div id="line"> | </div> 
      <div id="deleter">
      <%= link_to image_tag('delete.png'), country_path(country), method: :delete, id: "icon" %></div>

      <% end %>
     </div>
      </div>
    </div>

  <% end %>






